{
    "name": "ispeakerreact",
    "author": "yell0wsuit",
    "description": "An English-learning interactive tool written in React, designed to help learners practice speaking and listening",
    "private": true,
    "version": "2.4.0",
    "type": "module",
    "main": "main.cjs",
    "license": "Apache-2.0",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "start": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
        "package": "vite build --mode electron && electron-forge package",
        "make": "vite build --mode electron && electron-forge make",
        "vitebuildcli": "vite build --mode electron",
        "makecli": "electron-forge make",
        "appx": "vite build --mode electron && electron-forge package && cd ./out && electron-windows-store --input-directory ./iSpeakerReact-win32-x64 --output-directory ./ispeakerreact-appx --package-version ${npm_package_version}.0 --package-name ispeakerreact  --assets ../public/images/icons/windows11 -m ./appxmanifest.xml",
        "appxarm": "vite build --mode electron && electron-forge package --arch=arm64 && cd ./out && electron-windows-store --input-directory ./iSpeakerReact-win32-x64 --output-directory ./ispeakerreact-appx --package-version ${npm_package_version}.0 --package-name ispeakerreact  --assets ../public/images/icons/windows11 -m ./appxmanifest.xml"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@react-spring/web": "^9.7.4",
        "bootstrap": "^5.3.3",
        "cors": "^2.8.5",
        "dexie": "^4.0.8",
        "electron-log": "^5.2.0",
        "electron-squirrel-startup": "^1.0.1",
        "express": "^4.21.0",
        "he": "^1.2.0",
        "i18next": "^23.15.1",
        "i18next-browser-languagedetector": "^8.0.0",
        "i18next-http-backend": "^2.6.1",
        "lodash": "^4.17.21",
        "masonry-layout": "^4.2.2",
        "mime": "^4.0.4",
        "nprogress": "^0.2.0",
        "react": "^18.3.1",
        "react-bootstrap": "^2.10.5",
        "react-bootstrap-icons": "^1.11.4",
        "react-dom": "^18.3.1",
        "react-flip-toolkit": "^7.2.4",
        "react-i18next": "^15.0.2",
        "react-loading-skeleton": "^3.5.0",
        "react-router-dom": "^6.26.2"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.5.0",
        "@electron-forge/maker-deb": "^7.5.0",
        "@electron-forge/maker-dmg": "^7.5.0",
        "@electron-forge/maker-rpm": "^7.5.0",
        "@electron-forge/maker-squirrel": "^7.5.0",
        "@electron-forge/maker-zip": "^7.5.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
        "@electron-forge/plugin-fuses": "^7.5.0",
        "@electron/fuses": "^1.8.0",
        "@eslint/js": "^9.11.1",
        "@types/react": "^18.3.10",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "electron": "^32.1.2",
        "eslint": "^9.11.1",
        "eslint-plugin-react": "^7.37.0",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.12",
        "globals": "^15.9.0",
        "rollup-plugin-visualizer": "^5.12.0",
        "vite": "^5.4.8",
        "wait-on": "^8.0.1"
    },
    "optionalDependencies": {
        "appdmg": "latest"
    }
}
