{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "jsx": "react-jsx",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["main.ts", "src", "electron-main", "preload.ts"],
    "exclude": ["node_modules", "dist", "out", "data/ffmpeg"]
}
